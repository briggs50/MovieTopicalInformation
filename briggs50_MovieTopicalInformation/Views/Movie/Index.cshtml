@model IEnumerable<briggs50_MovieTopicalInformation.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
    <br />
    <br />
    <br />
    @using (Html.BeginForm())
    {
        <div id="FilterSearch" class="form-horizontal">

            <div class="form-group">
                @Html.Label("Search by Title", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBox("searchCriteria", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Filter by Category", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("categoryFilter",
                 new SelectList(@ViewBag.Category),
                 "All Categories",
                 new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Find Movies" class="btn col-md-2 col-md-offset-2" />
                <input type="button" value="Reset Movies" onclick="location.href='@Url.Action("Index", "Movie")'" class="btn col-md-2 col-md-offset-2" />
            </div>

        </div>
    }

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Title).ToString(), "Index", new { sortOrder = "Title" })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Year).ToString(), "Index", new { sortOrder = "Year" })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Category).ToString(), "Index", new { sortOrder = "Category" })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.LeadingActor).ToString(), "Index", new { sortOrder = "Leading Actor" })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Director).ToString(), "Index", new { sortOrder = "Director" })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                    @*displays each individual item display for display name for displays names of headers*@

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeadingActor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>

            </tr>
        }

    </table>
</body>
</html>
